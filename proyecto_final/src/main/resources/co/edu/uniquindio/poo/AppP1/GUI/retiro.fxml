<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.AppP1.GUI.RetirarController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #fff0f0; -fx-border-color: #dc3545; -fx-border-width: 2;">

    <Label text="REALIZAR RETIRO" style="-fx-text-fill: #b30000;">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="250">
        <Label text="Cuenta Origen:" prefWidth="120"/>
        <Label fx:id="numeroCuentaLabel" text="[NÃºmero de Cuenta]" style="-fx-font-weight: bold;"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="250">
        <Label text="Monto a Retirar:" prefWidth="120"/>
        <TextField fx:id="montoField" promptText="Ej: 50000.00" prefWidth="150"/>
    </HBox>

    <HBox alignment="CENTER" spacing="15">
        <Button text="Confirmar Retiro" onAction="#confirmarRetiro"
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        <Button text="Cancelar" onAction="#cancelar"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    </HBox>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>