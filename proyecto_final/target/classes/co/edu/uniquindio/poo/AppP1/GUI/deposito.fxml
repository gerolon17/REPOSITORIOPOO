<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.AppP1.GUI.DepositarController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #e6f7ff; -fx-border-color: #007bff; -fx-border-width: 2;">

    <Label text="REALIZAR DEPÓSITO" style="-fx-text-fill: #0056b3;">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <TextField fx:id="numeroCuentaDestinoField" promptText="cuentaDestino"/>

    <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="250">
        <Label text="Cuenta origen:" prefWidth="120"/>
        <Label fx:id="numeroCuentaOrigenLabel" text="[Número de Cuenta]" style="-fx-font-weight: bold;"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="250">
        <Label text="Monto a Depositar:" prefWidth="120"/>
        <TextField fx:id="montoField" promptText="Ej: 100000.00" prefWidth="150"/>
    </HBox>

    <HBox alignment="CENTER" spacing="15">
        <Button text="Confirmar Depósito" onAction="#confirmarDeposito"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        <Button text="Cancelar" onAction="#cancelar"
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    </HBox>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>